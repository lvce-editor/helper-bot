{
  "name": "@lvce-editor/helper-bot-monorepo",
  "version": "0.0.0-dev",
  "description": "GitHub App to automaticlly update lvce editor extensions to latest versions.",
  "license": "MIT",
  "author": "Lvce Editor",
  "type": "module",
  "scripts": {
    "build": "node packages/build/src/build.ts",
    "dev": "cd packages/app && npm run dev",
    "format": "prettier --write .",
