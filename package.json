  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 160
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@lerna/legacy-package-management": "^8.2.4",
    "@lvce-editor/eslint-config": "^7.3.0",
    "@swc-node/jest": "^1.9.1",
    "@types/node": "^25.3.0",
    "eslint": "^9.39.3",
    "jest": "^30.2.0",
    "lerna": "^8.2.4",
    "nock": "^14.0.11",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3"
  }
}
